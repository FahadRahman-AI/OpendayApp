const mainContent = document.querySelector('main');
let currentWeek = 0;
const weekData = [
{ start: "March 4", end: "March 10", year: "2025" },
{ start: "March 11", end: "March 17", year: "2025" },
{ start: "March 18", end: "March 24", year: "2025" },
{ start: "March 25", end: "March 31", year: "2025" },
{ start: "April 1", end: "April 7", year: "2025" }
];
function changeWeek(direction) {
currentWeek += direction;
if (currentWeek < 0) currentWeek = weekData.length - 1;
if (currentWeek >= weekData.length) currentWeek = 0;
const week = weekData[currentWeek];
document.getElementById('weekDisplay').textContent = `${week.start}-${week.end}, ${week.year}`;
// Smooth scroll to start when changing weeks
const container = document.querySelector('.overflow-x-auto');
container.scrollTo({ left: 0, behavior: 'smooth' });
}
function switchPage(pageName) {
mainContent.innerHTML = pages[pageName];
document.querySelectorAll('nav a').forEach(el => {
el.classList.remove('tab-active');
el.classList.add('text-gray-500');
});
document.querySelector(`nav a[data-page="${pageName}"]`).classList.add('tab-active');
document.querySelector(`nav a[data-page="${pageName}"]`).classList.remove('text-gray-500');
if(pageName === 'schedule') {
// Reset to first week when entering schedule page
currentWeek = 0;
const week = weekData[currentWeek];
document.getElementById('weekDisplay').textContent = `${week.start}-${week.end}, ${week.year}`;
}
}
document.querySelectorAll('nav a').forEach(link => {
const pageName = link.querySelector('span').textContent.toLowerCase();
link.setAttribute('data-page', pageName);
link.addEventListener('click', () => switchPage(pageName));
});
switchPage('home');
document.addEventListener('DOMContentLoaded', function() {
const mailDetailModal = document.createElement('div');
mailDetailModal.id = 'mailDetailModal';
mailDetailModal.className = 'fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50';
mailDetailModal.innerHTML = `
<div class="bg-white p-6 rounded-lg w-[340px] max-h-[80vh] overflow-y-auto relative">
<button onclick="closeMailDetail()" class="absolute top-2 right-2 w-8 h-8 flex items-center justify-center">
<i class="ri-close-line text-xl"></i>
</button>
<div id="mailDetailContent"></div>
</div>
`;
document.body.appendChild(mailDetailModal);
});
function showQRCode() {
const modal = document.getElementById('qrCodeModal');
modal.style.display = 'flex';
document.body.style.overflow = 'hidden';
}
function closeQRCode() {
const modal = document.getElementById('qrCodeModal');
modal.style.display = 'none';
document.body.style.overflow = 'auto';
}
</script>
</body>
</html>
