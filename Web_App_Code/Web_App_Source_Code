function showMailDetail(index) {
const mail = mailData[index];
const modalContent = document.getElementById('mailDetailContent');
modalContent.innerHTML = `
<div class="mb-6">
<h3 class="text-xl font-medium mb-2">${mail.title}</h3>
<div class="flex items-center text-sm text-gray-500 mb-4">
<span class="mr-2">${mail.sender}</span>
<span>${mail.time}</span>
</div>
<div class="text-sm whitespace-pre-line">${mail.content}</div>
</div>
`;
const modal = document.getElementById('mailDetailModal');
modal.style.display = 'flex';
document.body.style.overflow = 'hidden';
}
function closeMailDetail() {
const modal = document.getElementById('mailDetailModal');
modal.style.display = 'none';
document.body.style.overflow = 'auto';
}
function showAllMail() {
// Implement view all emails functionality
const modal = document.getElementById('mailDetailModal');
const modalContent = document.getElementById('mailDetailContent');
modalContent.innerHTML = `
<div class="mb-6">
<h3 class="text-xl font-medium mb-4">All Messages</h3>
<div class="space-y-4">
${mailData.map((mail, index) => `
<div class="border-b pb-4 last:border-b-0 last:pb-0 cursor-pointer" onclick="showMailDetail(${index})">
<div class="flex justify-between items-start mb-2">
<h4 class="font-medium">${mail.title}</h4>
<span class="text-xs text-gray-500">${mail.time}</span>
</div>
<div class="flex items-center text-sm text-gray-500 mb-2">
<span>${mail.sender}</span>
</div>
<p class="text-sm text-gray-500 line-clamp-2">${mail.content.split('\n')[0]}</p>
</div>
`).join('')}
</div>
</div>
`;
modal.style.display = 'flex';
document.body.style.overflow = 'hidden';
}
